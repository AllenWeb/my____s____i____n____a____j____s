var pic_array = new Array('images/pic_1.jpg','images/pic_2.jpg','images/pic_3.jpg','images/pic_4.jpg','images/pic_5.jpg','images/pic_6.jpg');
	
var t;
var flag1=0;
//幻灯片切换
function turn_pic(){
	flag1++;
	$("view").src = pic_array[flag1-1];
	if(flag1==6){
		flag1 = 0;
	}
	t=setTimeout("turn_pic()",3000);

}

//幻灯片停止
function stop_hdp(){
	clearTimeout(t);
}










